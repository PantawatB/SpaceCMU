          "path": ["api", "users", "register"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"studentId\": \"uB\", \"email\": \"uB@example.com\", \"password\": \"Password123!\", \"name\": \"User B\" }"
        }
      }
    },
    {
      "name": "Login B",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": {
          "raw": "{{baseUrl}}/api/users/login",
          "host": ["{{baseUrl}}"],
          "path": ["api", "users", "login"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"email\": \"uB@example.com\", \"password\": \"Password123!\" }"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var j = pm.response.json(); if (j && j.token) { pm.environment.set('tokenB', j.token); pm.environment.set('userBId', j.user && j.user.id); }"
            ]
          }
        }
      ]
    },
    {
      "name": "Friend request A->B",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{tokenA}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/friends/request",
          "host": ["{{baseUrl}}"],
          "path": ["api", "friends", "request"]
        },
        "body": { "mode": "raw", "raw": "{\"toUserId\": \"{{userBId}}\" }" }
      }
    },
    {
      "name": "Create Direct Chat A->B",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{tokenA}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/chats/direct",
          "host": ["{{baseUrl}}"],
          "path": ["api", "chats", "direct"]
        },
        "body": { "mode": "raw", "raw": "{\"otherUserId\": \"{{userBId}}\" }" }
      }
    },
    {
      "name": "Send Message A",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
