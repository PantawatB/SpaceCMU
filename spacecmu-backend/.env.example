# ================================
# SpaceCMU Backend Environment Variables
# ================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git!

# Server Configuration
PORT=3000
# Public base URL for file uploads and API responses
# Leave empty to use dynamic hostname, or set to specific IP/domain
PUBLIC_BASE_URL=

# Database Configuration
# When using Docker: use 'db' as DB_HOST and 5432 as DB_PORT
# When running locally: use '127.0.0.1' and 5433 (mapped port)
DB_HOST=127.0.0.1
DB_PORT=5433
DB_USER=postgres
DB_PASS=postgres
DB_NAME=spacecmu

# Authentication
# Generate a secure random string for JWT_SECRET (at least 32 characters)
# Example: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_to_a_random_string

# Google OAuth (Optional - for Google Sign-In)
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID_FROM_GOOGLE_CONSOLE
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET_FROM_GOOGLE_CONSOLE
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# Session Secret (for session management)
# Generate a secure random string (at least 32 characters)
SESSION_SECRET=generate_a_very_long_random_string_here

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3001 